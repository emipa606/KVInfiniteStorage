<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseMassiveStorage">
    <defName>IS_BlockStorage</defName>
    <label>block storage</label>
    <minifiedDef>MinifiedThing</minifiedDef>
    <description>A place to store all types of blocks.</description>
    <graphicData>
      <texPath>Furniture/BlockStorage</texPath>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>StoneBlocks</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Preferred</priority>
        <filter>
          <categories>
            <li>StoneBlocks</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>
</Defs>